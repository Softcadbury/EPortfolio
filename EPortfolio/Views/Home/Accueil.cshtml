<div id="accueil" class="container-sub display-none">
    <h1>Romain Parage</h1>
    <h1>E-Portfolio</h1>
    <p>
        Bienvenue sur mon Portofolio en ligne. Ici vous trouverez mon CV, une présentation de mes projets,
        un blog, ainsi qu'une galerie où j'expose des photos.
    </p>
    <a class="btn btn-primary" data-toggle="modal" data-target="#contact">Me Contacter</a>
</div>

@model EPortfolio.Models.MailModel
@using (Ajax.BeginForm("SendContactMail", "Tools", new AjaxOptions { OnBegin = "OnBegin", OnSuccess = "OnMailSend", OnFailure = "OnFailure" }))
{
    <div class="modal fade" id="contact">
        <div class="modal-dialog">
            <div class="modal-content" id="contact_form">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Me Contacter</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>@Html.LabelFor(m => m.Email)</label>
                        @Html.TextBoxFor(m => m.Email, string.Empty, new { @class = "form-control", placeholder = "Entrez votre adresse mail" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(m => m.Message)</label>
                        @Html.TextBoxFor(m => m.Message, string.Empty, new { @class = "form-control", placeholder = "Entrez votre message", style = "height: 150px;" })
                        @Html.ValidationMessageFor(m => m.Message)
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Annuler</a>
                    <input id="contact_button" type="submit" class="btn btn-primary" value="Envoyer" data-loading-text="Envoie en cours..." />
                </div>
            </div>
            <div class="modal-content display-none" id="contact_success">
                <div class="modal-body">
                    <div class="alert alert-success">Votre message a bien été envoyé</div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Fermer</a>
                </div>
            </div>
            <div class="modal-content display-none" id="contact_failure">
                <div class="modal-body">
                    <div class="alert alert-danger">Une erreur est survenue</div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Fermer</a>
                </div>
            </div>
        </div>
    </div>
}